{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "region": "southamerica-east1",
    "timeoutSeconds": 60,
    "memory": "256MB"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
